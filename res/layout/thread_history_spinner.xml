<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/thread_history_spinner_layout"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
		android:background="@color/LightBG"
	android:layout_height="fill_parent" 
	android:weightSum="1" android:gravity="top">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_marginLeft="6dp"
            android:gravity="left" >

            <LinearLayout
                android:layout_width="265dp"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/board_list_headline"
                    android:layout_height="wrap_content"
                    android:text="@string/boardlist_headline"
                    android:layout_width="250dp"
                    android:textColor="@color/White"
					android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>

          <FrameLayout 
		        android:id="@+id/board_list_history_wrapper" 
	            android:layout_width="50sp"
	            android:layout_height="39sp"
		    	android:layout_gravity="top" 
				android:background="@color/DarkGreenYellow">
               
	        <net.krautchan.android.widget.ThreadHistoryWidget
	            android:id="@+id/thread_history_spinner2"
	            android:layout_width="40dp"
	            android:layout_height="48dp"/>
        
            <TextView
                android:id="@+id/board_list_history2"
                android:layout_width="40sp"
            	android:layout_height="48sp"
                android:textColor="@color/White"
           		android:background="@color/Red"
                android:text="@string/icon_cog"
				android:textSize="30sp"
                android:textAppearance="?android:attr/textAppearanceLarge" />
	           
    		</FrameLayout>
        </LinearLayout>

	<ListView 
		android:id="@+id/android:list"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	/>
</LinearLayout>


