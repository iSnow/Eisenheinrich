<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/command_bar_widget"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginLeft="6dp"
    android:orientation="horizontal"
    android:gravity="left"
    android:baselineAligned="false" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    	android:layout_marginLeft="6dp" >

        <TextView
            android:id="@+id/headline"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="14sp" 
            android:textColor="@color/White"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="3dp" 
            android:layout_height="2dp" />
    </LinearLayout>
   <LinearLayout 
        android:layout_width="0dip"
        android:layout_height="match_parent"
    	android:orientation="horizontal"
	    android:layout_weight="1"
    	android:gravity="right">
	   <FrameLayout
	        android:id="@+id/options_wrapper"
	        android:layout_width="45sp"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="1sp"
	        android:layout_gravity="top"
	        android:background="@color/DarkGreenYellow" >
	
	        <TextView
	            android:id="@+id/options_button"
	            android:layout_width="30sp"
	            android:layout_height="30sp"
	            android:layout_marginLeft="8sp"
	            android:layout_marginTop="5sp"
	            android:text="@string/icon_options"
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            android:textColor="@color/White"
	            android:textSize="30sp" />
	    </FrameLayout>
	    <FrameLayout
	        android:id="@+id/history_wrapper"
	        android:layout_width="45sp"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="1sp"
	        android:layout_gravity="top"
	        android:layout_marginLeft="8sp"
	        android:background="@color/DarkGreenYellow" >
	
	        <TextView
	            android:id="@+id/history_button"
	            android:layout_width="30sp"
	            android:layout_height="30sp"
	            android:layout_marginLeft="9sp"
	            android:layout_marginTop="5sp"
	            android:text="@string/icon_cog"
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            android:textColor="@color/White"
	            android:textSize="30sp" />
	    </FrameLayout>
	</LinearLayout>
</LinearLayout>