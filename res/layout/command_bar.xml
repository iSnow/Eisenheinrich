<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/command_bar_widget"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginLeft="6dp"
    android:baselineAligned="false"
    android:gravity="left"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/headline"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="3dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/history_wrapper"
            android:layout_width="45sp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginBottom="1sp"
            android:background="@color/DarkGreenYellow" >

            <TextView
                android:id="@+id/history_button"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginLeft="9sp"
                android:layout_marginTop="5sp"
                android:text="@string/icon_cog"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/White"
                android:textSize="30sp"
                android:shadowColor="@color/DarkerGreenYellow"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/options_wrapper"
            android:layout_width="45sp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginBottom="1sp"
            android:layout_marginLeft="1sp"
            android:background="@color/DarkGreenYellow">

            <TextView
                android:id="@+id/options_button"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginLeft="8sp"
                android:layout_marginTop="5sp"
                android:text="@string/icon_options"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/White"
                android:textSize="30sp" 
                android:shadowColor="@color/DarkerGreenYellow"
            	android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>