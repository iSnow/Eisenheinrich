<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/command_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_marginLeft="6dp"
        android:gravity="left" >

        <LinearLayout
            android:layout_width="265dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/board_list_headline"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/boardlist_headline"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/White"
                android:textStyle="bold" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/board_list_history_wrapper"
            android:layout_width="50sp"
            android:layout_height="39sp"
            android:layout_gravity="top"
            android:background="@color/DarkGreenYellow" >

            <TextView
                android:id="@+id/board_list_history"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginLeft="11sp"
                android:layout_marginTop="5sp"
                android:text="@string/icon_cog"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/White"
                android:textSize="30sp" />
        </FrameLayout>
    </LinearLayout>

</FrameLayout>