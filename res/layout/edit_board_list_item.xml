<?xml version="1.0" encoding="utf-8"?>
<net.krautchan.android.widget.CheckableLinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:eisenheinrich="http://schemas.android.com/apk/res/net.krautchan.android.widget"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:textSize="24sp" 
	android:padding="6dp" 
	android:gravity="left">
	<TextView android:id="@+id/boardlist_shortname"
		android:layout_height="wrap_content" 
		android:layout_weight="1"
		android:layout_width="25dp" 
		android:textSize="24sp"
		android:textColor="@color/TextGreen" 
		android:textStyle="bold"
		android:gravity="left" 
		android:focusable="false" /> 

	<TextView
	    android:id="@+id/boardlist_longname"
	    android:layout_width="200dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:gravity="left"
	    android:textSize="22sp"  
		android:focusable="false" />

	<net.krautchan.android.widget.InertCheckBox
	    android:id="@+id/boardlist_hide_item"
	    android:layout_width="25dp"
	    android:layout_height="25dp"
	    android:layout_weight="1"
	    android:text="" 
		android:focusable="false"/>
	
</net.krautchan.android.widget.CheckableLinearLayout>